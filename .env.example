# Agentry Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# MODE SELECTION
# =============================================================================
# local = All data stored locally (SQLite, local files, LanceDB local)
# cloud = Cloud services (Supabase, Vercel Blob, LanceDB)
AGENTRY_MODE=local

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
# Groq API Key (get from: https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API Key (get from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# CLOUD MODE (required when AGENTRY_MODE=cloud)
# =============================================================================
# Supabase (https://supabase.com)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key

# Vercel Blob Storage (https://vercel.com/storage/blob)
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxx

# =============================================================================
# EMBEDDING & SIMPLEMEM
# =============================================================================
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=qwen3-embedding:0.6b
OLLAMA_URL=http://localhost:11434
# LANCEDB_PATH=./agentry/user_data/lancedb_data

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
# LOG_LEVEL=INFO
# MAX_ITERATIONS=20
# CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# SMTP CONFIGURATION (for sending emails)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=Agentry <notifications@agentry.ai>
SMTP_USE_TLS=true
